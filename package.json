{
  "name": "vibe-drawing",
  "version": "1.0.0",
  "description": "A mobile-first haptic drawing web app for invisible heroes. Built using the Agentic Workflow Protocol (AWP) by the OVERVIBING.COM community.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "format": "prettier --write .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build": "vite build",
    "serve": "npx http-server -c-1 -p 5173",
    "dev": "vite",
    "preview": "vite preview",
    "cap:sync": "cap sync",
    "cap:ios": "cap open ios",
    "cap:android": "cap open android",
    "ios:build": "CAPACITOR=true npm run build && npx cap sync ios",
    "ios:open": "npm run ios:build && npx cap open ios",
    "ios": "CAPACITOR=true npm run build && npx cap sync ios && npx cap open ios",
    "android:build": "npm run build && npx cap sync android",
    "android:open": "npm run android:build && npx cap open android"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michaelwybraniec/vibe-drawing.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/michaelwybraniec/vibe-drawing/issues"
  },
  "homepage": "https://github.com/michaelwybraniec/vibe-drawing#readme",
  "devDependencies": {
    "@capacitor/cli": "^7.4.2",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.11"
  },
  "type": "module",
  "dependencies": {
    "@capacitor/android": "^7.4.2",
    "@capacitor/core": "^7.4.2",
    "@capacitor/haptics": "^7.0.2",
    "@capacitor/ios": "^7.4.2"
  }
}
